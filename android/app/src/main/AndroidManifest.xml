<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- OpenGL ES 3.1 required for modern graphics -->
    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />

    <!-- Optional hardware features -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.gamepad"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="false" />

    <!-- Permissions -->
    <!-- Bluetooth for game controllers -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Vibration feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- High precision sensors (gyroscope, etc.) -->
    <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS" />

    <!-- Internet (if your game needs it) -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->

    <!-- External storage (for loading game assets) -->
    <!-- Only needed for legacy storage access -->
    <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" /> -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${APP_NAME}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blitz3DNG"
        android:hardwareAccelerated="true"
        android:extractNativeLibs="false"
        android:usesCleartextTraffic="false">

        <!-- Main Game Activity -->
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden|keyboard|layoutDirection|locale|uiMode|smallestScreenSize"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Support USB game controllers -->
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <!-- Meta-data for USB controller support -->
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/usb_device_filter" />
        </activity>

        <!-- Allow app to be installed on external storage -->
        <meta-data
            android:name="android.content.pm.INSTALL_LOCATION"
            android:value="auto" />

    </application>

</manifest>
